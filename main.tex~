\section{INTERNSHIPS}

% IITB Internship
\cventry{June - July 2017}{High Level Synthesis and Software-Hardware co-design on Zedboard $^{\textbf{\small \href{https://goo.gl/j7XiyY}{\textcolor{blue}{[Report]}}}}$}{Dr. Sachin Patkar}{HPC Lab}{IIT Bombay}{
\begin{itemize}
\item Learnt and explored High Level Synthesis tools by Xilinx
\item Implemented a Matrix Multiplier using Rank 1 update scheme in Vivado HLS proposed \href{https://goo.gl/sYfPH8}{\textcolor{blue}{here}}
\item Learnt Xilinx SDSoC tool for SoC design and implemented the matrix multiplier on Zedboard
\item Analyzed various bottlenecks and aspects of hardware-software co-design
\item[~]
\end{itemize}}


% Guwahati internship
\cventry{Decemeber 2016}{Optimized Arithmetic Operations and Conjugate Gradient method on FPGA}{Dr. Gaurav Trivedi}{EEE Department}{IIT Guwahati}{
\begin{itemize}
%\item Implemented 32-bit Slansky, Ladner-Fischer, Brent Kung, Kogge Stone, Knowles adders on FPGA.
%\item Implemented a Floating Point Division module on FPGA.
%\item Implemented a Fused Add and Multiply module on FPGA.
\item \href{https://github.com/sumit-2020/ALU32}{\textcolor{blue}{Implemented}} and tested the following operations on Virtix 6:
  \begin{itemize}%
  \item 32-bit Slansky, Ladner-Fischer, Brent-Kung, Kogge-Stone and Knowles adders
  \item Fused Adder-Multiplier and Floating Point Divider
  \end{itemize}
  \item Learnt about the Congugate Gradient Method for SpMV
  \item Designed an optimized way to implement it for use in a circuit simulator
\item[~]
\end{itemize}}



% IEEE Internship
\cventry{May-June 2016}{Double gated t-FET design}{Dr. Anand Bulusu}{ECE Department}{IIT Roorkee}{
\begin{itemize}
\item Simulated and understood physics of a double gated t-FET proposed in the famous \href{http://ieeexplore.ieee.org/document/4252356/}{\textcolor{blue}{paper}} by Kathy Boucart
\item Studied the effects of varying different parameters of a t-FET on the drain current
\item[~]
\end{itemize}
}

